<?xml version="1.0"?>
<addon scheme="2.0">
	<id>smart_distribution</id>
	<name>Smart distribution specific changes</name>
	<description><![CDATA[© <a href="http://cs-market.com" target="_blank">CS-Market</a>]]></description>
	<priority>26732300</priority>
	<version>1.0.9</version>
	<position>0</position>
	<status>active</status>
	<default_language>en</default_language>
	<supplier>CS-Market</supplier>
	<supplier_link>http://cs-market.com/</supplier_link>
	<compatibility>
		<core_version>
			<min>4.3.5</min>
		</core_version>
	</compatibility>
	<language_variables>
		<item lang="en" id="min_order_amount">Min order amount</item>
		<item lang="en" id="clone_category__clone_subcat">Клонировать подкатегории</item>
		<item lang="en" id="clone_category_clone_products">Клонировать товары</item>
		<item lang="en" id="clone_category_clone_products__no_copy">не копировать ничего</item>
		<item lang="en" id="clone_category_clone_products__copy">копировать товары</item>
		<item lang="en" id="clone_category_clone_products__clone">клонировать товары</item>
		<item lang="en" id="clone_category_change_vendor">Изменить вендора категорий/товаров</item>
		<item lang="en" id="notify_manager_order_create">Уведомлять менеджеров о создании заказа</item>
		<item lang="en" id="notify_manager_order_update">Уведомлять менеджеров о редактировании заказа</item>
	</language_variables>
	<queries>
		<item>CREATE TABLE `?:vendors_customers` (
		  `vendor_manager` mediumint(8) unsigned NOT NULL,
		  `customer_id` mediumint(8) unsigned NOT NULL,
		  UNIQUE KEY `vendor_manager` (`vendor_manager`,`customer_id`)
		) ENGINE=MyISAM DEFAULT CHARSET=utf8;
		</item>
		<item for="uninstall">DROP TABLE IF EXISTS ?:vendors_customers;</item>

		<item>ALTER TABLE `?:users` ADD `is_manager` CHAR(1) NOT NULL DEFAULT 'N' AFTER `external_id`;</item>
		<item for="uninstall">ALTER TABLE `?:users` DROP `is_manager`;</item>

		<item>ALTER TABLE `?:category_descriptions` ADD `alternative_names` TEXT NOT NULL;</item>
		<item for="uninstall">ALTER TABLE `?:category_descriptions` DROP `alternative_names`;</item>

		<item>ALTER TABLE `?:vendor_plans` ADD `usergroups` TEXT NOT NULL;</item>
		<item for="uninstall">ALTER TABLE `?:vendor_plans` DROP `usergroups`;</item>

		<item>ALTER TABLE `?:cscart_products` ADD `send_price_1c` CHAR(1) NOT NULL DEFAULT 'Y' AFTER `update_1c`</item>
		<item for="uninstall">ALTER TABLE `?:cscart_products` DROP `send_price_1c`;</item>

		<item>ALTER TABLE `?:companies` ADD `notify_manager_order_create` char(1) NOT NULL DEFAULT 'Y';</item>
		<item for="uninstall">ALTER TABLE `?:companies` DROP `notify_manager_order_create`;</item>

		<item>ALTER TABLE `?:companies` ADD `notify_manager_order_update` char(1) NOT NULL DEFAULT 'Y';</item>
		<item for="uninstall">ALTER TABLE `?:companies` DROP `notify_manager_order_update`;</item>
	</queries>
</addon>